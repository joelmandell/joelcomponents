<ul aria-orientation="@(IsTopMenu ? "horizontal" : "undefined")" 
    class="@(IsTopMenu ? "main-menu" : "")" role="menu" aria-label="@(ParentMenuItem?.Text ?? "" )">
    <CascadingValue Name="MenuItems" Value="this" TValue="MenuItems">
        <CascadingValue Name="IsTopMenu" Value="false" TValue="bool">
            <CascadingValue Value="Menu" TValue="Menu">
                <CascadingValue Value="true" Name="ParentIsMenuItems" IsFixed="true">
                    @ChildContent
                </CascadingValue>
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>

</ul>

