@* A container that shows a spinner while loading, then displays the image. *@

<div class="image-spinner-container">
    @if (IsLoading)
    {
        <div class="spinner-center">
            <div class="loading-spinner" ></div>
        </div>
    }
    else
    {
        <img src="@ImageSrc" class="inner-img-container fade-in" alt="@ImageAlt" />
    }
</div>

@code {
    /// <summary>
    /// When true, the spinner is shown. When false, the image is shown.
    /// </summary>
    [Parameter]
    public bool IsLoading { get; set; }

    /// <summary>
    /// The URL for the image source.
    /// </summary>
    [Parameter]
    public string? ImageSrc { get; set; }

    /// <summary>
    /// The alt text for the image.
    /// </summary>
    [Parameter]
    public string? ImageAlt { get; set; }
}